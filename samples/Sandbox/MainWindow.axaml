<Window xmlns="https://github.com/avaloniaui"
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
        xmlns:dataGridAsyncDemoMvvm="clr-namespace:DataGridAsyncDemoMVVM"
        x:DataType="dataGridAsyncDemoMvvm:MainViewModel"
        x:Class="Sandbox.MainWindow">
  <DockPanel>
    <StackPanel DockPanel.Dock="Right" Spacing="20">
      <Button Content="Select Random" Command="{Binding SelectRandomCommand}" />
      <TextBlock Text="{Binding RandomIndex}"/>
    </StackPanel>
    <ComboBox ItemsSource="{Binding Selector.Options}" SelectedItem="{Binding SelectedItem}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding Item.Id}" />
              <TextBlock Text="{Binding Item.Str1}" />
              <TextBlock Text="{Binding Item.Str2}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding IsLoading}" />
            </StackPanel>
          </StackPanel>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
  </DockPanel>
</Window>
