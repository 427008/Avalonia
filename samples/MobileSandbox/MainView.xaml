<UserControl x:Class="MobileSandbox.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mobileSandbox="using:MobileSandbox"
             x:DataType="mobileSandbox:MainView">
  <StackPanel Margin="100 50" Spacing="50">
    <TransitioningContentControl Width="200" Height="200" Name="Con"/>
    <Button Content="Toggle" Command="{Binding ButtonCommand}" HorizontalAlignment="Center" />
    <Label Name="Current"/>
  </StackPanel>
</UserControl>
