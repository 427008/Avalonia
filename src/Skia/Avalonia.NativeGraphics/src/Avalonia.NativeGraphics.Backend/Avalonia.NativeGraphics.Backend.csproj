<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
      <TargetFrameworks>netstandard2.0</TargetFrameworks>
      <RootNamespace>Avalonia.NativeGraphics</RootNamespace>
      <AssemblyName>Avalonia.NativeGraphics</AssemblyName>
      <PackageId>Avalonia.NativeGraphics</PackageId>
      <IncludeLinuxSkia>true</IncludeLinuxSkia>
      <IncludeWasmSkia>true</IncludeWasmSkia>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <LangVersion>9</LangVersion>
    </PropertyGroup>
    <ItemGroup>
      <ProjectReference Include="..\..\..\..\..\packages\Avalonia\Avalonia.csproj" />
      <ProjectReference Include="..\Avalonia.NativeGraphics\Avalonia.NativeGraphics.csproj" />
    </ItemGroup>

	<ItemGroup>
		<PackageReference Include="HarfBuzzSharp" Version="2.8.2" />
		<PackageReference Condition="'$(IncludeLinuxSkia)' == 'true'" Include="HarfBuzzSharp.NativeAssets.Linux" Version="2.8.2" />
		<PackageReference Condition="'$(IncludeWasmSkia)' == 'true'" Include="HarfBuzzSharp.NativeAssets.WebAssembly" Version="2.8.2" />
	</ItemGroup>

</Project>
